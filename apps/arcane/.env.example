# Application URL (change to your domain)
APP_URL=https://arcane.jobot-services.com

# Encryption Key (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=ENCRYPTION_KEY

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=JWT_SECRET

# Database Configuration
POSTGRES_DB=arcane
POSTGRES_USER=postgres
POSTGRES_PASSWORD=POSTGRES_PASSWORD

# Database URL (must match postgres credentials above)
DATABASE_URL=postgresql://postgres:POSTGRES_PASSWORD@postgres:5432/arcane

# OIDC Configuration (Optional - for Single Sign-On)
OIDC_ENABLED=false
